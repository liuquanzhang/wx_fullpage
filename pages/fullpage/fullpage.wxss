/* pages/fullpage/fullpage.wxss */

.container-fill{
  height: 100%;
  padding: 0;
  overflow: hidden;
  position: relative
}
.scroll-fullpage{
    height: 100%;
    width: 100%;
    transition: margin-top .7s ease;
}
.section{
  width: 100%;
  height: 100%
}
.sliderBox{
  position: absolute;
  right: 10px;
  top:50%
}
.slider{
  width: 10px;
  height: 10px;
  margin: 5px 0;
  text-align: center
}
.sliderItem{
 border-radius: 50%;
  background-color: #333;
   width: 5px;
  height: 5px;
  display: inline-block;
  transition: all .2s ease
}
.sliderItem.active{
  width: 10px;
  height: 10px;
}